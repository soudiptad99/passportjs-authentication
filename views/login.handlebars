<div class="row">
    <div class="col-sm-6 col-sm-offset-3">
        {{#if successMessage}}
            <div class="alert alert-success">{{successMessage}}</div>
        {{/if}}
        {{#if failMessage}}
            <div class="alert alert-danger">{{failMessage}}</div>
        {{/if}}
        <form method="POST" actions="/login">
            <div class="form-group">
                <label for="username" class="control-label">Username</label>
                <input type="text" class="form-control" id="username" placeholder="Username" name="username">
            </div>
            <div class="form-group">
                <label for="password" class="control-label">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password" name="password">
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary btn-block">Sign in</button>
            </div>
        </form>

        <hr />

        <a href="/auth/facebook" class="btn btn-primary"><span class="fa fa-facebook"></span> Login with Facebook</a>
        <a href="/auth/twitter" class="btn btn-primary"><span class="fa fa-twitter"></span> Login with Twitter</a>
        <a href="/auth/google" class="btn btn-primary"><span class="fa fa-google"></span> Login with Google</a>
    </div>
</div>